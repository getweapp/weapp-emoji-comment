.item {
    background-color: #ffffff;
    margin-bottom: 15px
}
.content {
    padding: 15px;
}
.i-top {
    width:100%;
    height: 230px;
    overflow: hidden;
    /*margin-bottom: 15px;*/
    display: flex;
    justify-content: center;
    position: relative
}
.i-img {
    width:100%
}
.i-video {
    width: 100%;
    height: 100%;
    position: relative;
    z-index: 9
}
.c-top {
    display: flex;
    flex-direction: column
}
.title {
    font-size: 16px;
}
.info {
    margin: 8px 0;
    font-size: 14px;
    color:#888;
    line-height: 20px;
}
.c-bottom {
    display: flex;
    justify-content: space-between;
    position: relative;
    padding-top: 10px;
}
.c-bottom::after {
    content: "";
    position: absolute;
    top: 0;
    left: -15px;
    right: -15px;
    height: 1px;
    background-color: #dadada;
    transform: scaleY(.3)
}


.user {
    display: flex;
    align-items: center;
}
.u-box {
    display: flex;
    flex-direction: column;
}
.u-img {
    width:20px;
    height: 20px;
    border-radius: 50%;
    margin-right: 8px
}
.u-name {
    font-size: 12px;
    color:#888;
}
.u-time {
    font-size: 10px;
    color:#888;
}
.r-icon-like {
    color:#be181b;
}
.r-icon-comment {
    color:#2856b6;
}
.iconfont {
    margin-left: 15px;
    font-size: 12px
}
.iconfont text {
    color:#888;
    margin-left: 3px
}
